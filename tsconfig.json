{
  "extends": "@tsconfig/bun/tsconfig.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
    "types": ["bun-types"]
  },
  "include": [
    "bin/src",
    "build.ts",
    "packages/~/*/*/*/src",
    "packages/~/*/*/src"
  ],
  "references": [
    { "path": "packages/~/app/api/tsconfig.json" },
    { "path": "packages/~/app/core/tsconfig.json" }
  ]
}
